<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="280dp"
    android:layout_gravity="start"
    android:layout_height="match_parent"
    android:background="#dd2f44"
    android:paddingLeft="20dp"
    android:paddingTop="45dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp"
    android:nestedScrollingEnabled="true">

    <com.esdevices.backbeater.ui.widgets.BBTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sensitivity level"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="true"
        android:textColor="#fff" />

    <com.esdevices.backbeater.ui.widgets.SensitivitySlider
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/sensitivityLevel"
        android:layout_gravity="center_horizontal" />

    <com.esdevices.backbeater.ui.widgets.BBTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="metronom sound"
        android:id="@+id/textView6"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:textColor="#fff" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center|fill_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/soundDrum"
            android:src="@drawable/side_stick"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/soundSticks"
            android:src="@drawable/sticks"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/soundMetronom"
            android:src="@drawable/metronome"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/soundSurprise"
            android:src="@drawable/surprise"
            android:layout_weight="1" />
    </LinearLayout>

    <com.esdevices.backbeater.ui.widgets.BBTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="window"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="true"
        android:textColor="#fff" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <com.esdevices.backbeater.ui.widgets.NumberButton
            android:layout_width="@dimen/number_button_dims"
            android:layout_height="@dimen/number_button_dims"
            android:text="2"
            android:id="@+id/window2"
            android:layout_weight="1" />
        <com.esdevices.backbeater.ui.widgets.NumberButton
            android:layout_width="@dimen/number_button_dims"
            android:layout_height="@dimen/number_button_dims"
            android:text="4"
            android:id="@+id/window4"
            android:layout_weight="1" />
        <com.esdevices.backbeater.ui.widgets.NumberButton
            android:layout_width="@dimen/number_button_dims"
            android:layout_height="@dimen/number_button_dims"
            android:text="8"
            android:id="@+id/window8"
            android:layout_weight="1" />
        <com.esdevices.backbeater.ui.widgets.NumberButton
            android:layout_width="@dimen/number_button_dims"
            android:layout_height="@dimen/number_button_dims"
            android:text="16"
            android:id="@+id/window16"
            android:layout_weight="1" />
    </LinearLayout>

    <com.esdevices.backbeater.ui.widgets.BBTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="beat"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="true"
        android:textColor="#fff" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <com.esdevices.backbeater.ui.widgets.NumberButton
            android:layout_width="@dimen/number_button_dims"
            android:layout_height="@dimen/number_button_dims"
            android:text="1"
            android:id="@+id/beat1"
            android:layout_weight="1" />
        <com.esdevices.backbeater.ui.widgets.NumberButton
            android:layout_width="@dimen/number_button_dims"
            android:layout_height="@dimen/number_button_dims"
            android:text="2"
            android:id="@+id/beat2"
            android:layout_weight="1" />
        <com.esdevices.backbeater.ui.widgets.NumberButton
            android:layout_width="@dimen/number_button_dims"
            android:layout_height="@dimen/number_button_dims"
            android:text="3"
            android:id="@+id/beat3"
            android:layout_weight="1" />
        <com.esdevices.backbeater.ui.widgets.NumberButton
            android:layout_width="@dimen/number_button_dims"
            android:layout_height="@dimen/number_button_dims"
            android:text="4"
            android:id="@+id/beat4"
            android:layout_weight="1" />
    </LinearLayout>

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_weight="1" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/imageAbout"
        android:src="@drawable/help"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp" />

    <com.esdevices.backbeater.ui.widgets.BBTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textVersion"
        android:layout_gravity="center_horizontal"
        android:text="Verison 1.0.0 (1)"
        android:textColor="#fff"
        android:textAlignment="center" />
</LinearLayout>