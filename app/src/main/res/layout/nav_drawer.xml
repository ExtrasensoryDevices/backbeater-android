<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="start"
    android:layout_height="match_parent"
    android:id="@+id/pop_bar">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="@color/assent_color"
    android:paddingLeft="@dimen/padding_large"
    android:paddingTop="45dp"
    android:paddingRight="@dimen/padding_large"
    android:paddingBottom="@dimen/padding_large"
    android:nestedScrollingEnabled="true"
    android:id="@+id/nav_bar">

    <com.esdevices.backbeater.ui.widgets.BBTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sensitivity level"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/padding_small"
        android:textAllCaps="true"
        android:textColor="#fff" />

    <com.esdevices.backbeater.ui.widgets.SensitivitySlider
        android:id="@+id/sensitivitySlider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_medium"
        android:layout_gravity="center_horizontal" />

    <com.esdevices.backbeater.ui.widgets.BBTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="metronome sound"
        android:id="@+id/textView6"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="true"
        android:layout_marginBottom="@dimen/padding_large"
        android:layout_marginTop="@dimen/padding_xxlarge"
        android:textColor="#fff" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center|fill_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_medium"
            android:id="@+id/soundDrum"
            android:src="@drawable/side_stick"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_medium"
            android:id="@+id/soundSticks"
            android:src="@drawable/sticks"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_medium"
            android:id="@+id/soundMetronom"
            android:src="@drawable/metronome"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_medium"
            android:id="@+id/soundSurprise"
            android:src="@drawable/surprise"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/padding_xxlarge"
        android:layout_marginBottom="@dimen/padding_large">

        <com.esdevices.backbeater.ui.widgets.BBTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="averaging window"

            android:id="@+id/textView3"
            android:textAllCaps="true"
            android:textColor="#fff" />

        <ImageView
            android:id="@+id/avgHelpButton"
            android:layout_width="@dimen/button_about"
            android:layout_height="@dimen/button_about"
            android:layout_marginLeft="@dimen/padding_medium"
            android:layout_marginStart="@dimen/padding_medium"
            android:src="@drawable/help" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <com.esdevices.backbeater.ui.widgets.NumberButton
            android:layout_width="@dimen/button_middle"
            android:layout_height="@dimen/button_middle"
            android:text="2"
            android:id="@+id/window2"
            android:layout_weight="1" />
        <com.esdevices.backbeater.ui.widgets.NumberButton
            android:layout_width="@dimen/button_middle"
            android:layout_height="@dimen/button_middle"
            android:text="3"
            android:id="@+id/window3"
            android:layout_weight="1" />
        <com.esdevices.backbeater.ui.widgets.NumberButton
            android:layout_width="@dimen/button_middle"
            android:layout_height="@dimen/button_middle"
            android:text="4"
            android:id="@+id/window4"
            android:layout_weight="1" />
        <com.esdevices.backbeater.ui.widgets.NumberButton
            android:layout_width="@dimen/button_middle"
            android:layout_height="@dimen/button_middle"
            android:text="5"
            android:id="@+id/window5"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/padding_xxlarge"
        android:layout_marginBottom="@dimen/padding_large">

        <com.esdevices.backbeater.ui.widgets.BBTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="beat"
            android:id="@+id/textView4"
            android:textAllCaps="true"
            android:textColor="#fff" />

        <ImageView
            android:id="@+id/beatHelpButton"
            android:layout_width="@dimen/button_about"
            android:layout_height="@dimen/button_about"
            android:layout_marginLeft="@dimen/padding_medium"
            android:layout_marginStart="@dimen/padding_medium"
            android:src="@drawable/help" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <com.esdevices.backbeater.ui.widgets.NumberButton
            android:layout_width="@dimen/button_middle"
            android:layout_height="@dimen/button_middle"
            android:text="1"
            android:id="@+id/beat1"
            android:layout_weight="1" />
        <com.esdevices.backbeater.ui.widgets.NumberButton
            android:layout_width="@dimen/button_middle"
            android:layout_height="@dimen/button_middle"
            android:text="2"
            android:id="@+id/beat2"
            android:layout_weight="1" />
        <com.esdevices.backbeater.ui.widgets.NumberButton
            android:layout_width="@dimen/button_middle"
            android:layout_height="@dimen/button_middle"
            android:text="3"
            android:id="@+id/beat3"
            android:layout_weight="1" />
        <com.esdevices.backbeater.ui.widgets.NumberButton
            android:layout_width="@dimen/button_middle"
            android:layout_height="@dimen/button_middle"
            android:text="4"
            android:id="@+id/beat4"
            android:layout_weight="1" />
    </LinearLayout>

    <Space
        android:layout_width="@dimen/padding_medium"
        android:layout_height="@dimen/padding_medium"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/aboutButton"
        android:layout_width="@dimen/button_about"
        android:layout_height="@dimen/button_about"
        android:src="@drawable/help"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="5dp" />

    <com.esdevices.backbeater.ui.widgets.BBTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textVersion"
        android:layout_gravity="center_horizontal"
        android:text="Version 1.0.0 (1)"
        android:textColor="#fff"
        android:textAlignment="center" />
</LinearLayout>
</RelativeLayout>